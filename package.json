{
  "name": "wordpress-theme-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate WordPress theme",
  "author": "Barbapapazes",
  "repository": {
    "type": "git",
    "url": "https://github.com/Barbapapazes/wordpress-theme-boilerplate"
  },
  "text_domain": "boilerplate",
  "license": "MIT",
  "scripts": {
    "production:css-app": "cross-env NODE_ENV=production tailwindcss -i ./resources/css/app.css -o ./css/app.css --postcss --minify",
    "production:css-editor": "cross-env NODE_ENV=production tailwindcss -i ./resources/css/editor-style.css -o ./css/editor-style.css --postcss --minify",
    "production:js": "cross-env NODE_ENV=production ./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js --minify",
    "production:blocks": "cross-env NODE-ENV=production webpack",
    "dev:css-app": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/app.css -o ./css/app.css --postcss",
    "dev:css-editor": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/editor-style.css -o ./css/editor-style.css --postcss",
    "dev:js": "cross-env NODE_ENV=development ./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js",
    "dev:blocks": "cross-env NODE_ENV=development webpack",
    "watch:css-app": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/app.css -o ./css/app.css --postcss --watch",
    "watch:css-editor": "cross-env NODE_ENV=development tailwindcss -i ./resources/css/editor-style.css -o ./css/editor-style.css --postcss --watch",
    "watch:js": "cross-env NODE_ENV=development ./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js --watch",
    "watch:blocks": "cross-env NODE_ENV=development webpack --watch",
    "production": "concurrently \"npm run production:css-app\" \"npm run production:css-editor\" \"npm run production:js\" \"npm run production:blocks\"",
    "dev": "concurrently \"npm run dev:css-app\" \"npm run dev:css-editor\" \"npm run dev:js\" \"npm run dev:blocks\"",
    "watch": "concurrently \"npm run watch:css-app\" \"npm run watch:css-editor\" \"npm run watch:js\" \"npm run watch:js\"",
    "browser-sync": "browser-sync start --proxy \"wordpress-theme.test\" --host=\"wordpress-theme.test\" --no-inject-changes --files=\"./\"",
    "watch-sync": "concurrently \"npm run browser-sync\" \"npm run watch\""
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@jeffreyvr/tailwindcss-tailpress": "^2.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.10.2",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.2.1",
    "cross-env": "^6.0.3",
    "esbuild": "^0.12.24",
    "postcss": "^8.4.14",
    "postcss-import": "^14.0.0",
    "tailwindcss": "^3.1.3",
    "unpoly": "^2.6.1",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0"
  }
}
